# /etc/systemd/system/sushy-tools.service
[Unit]
Description=Sushy Tools (Redfish Emulator for Libvirt)
After=network.target syslog.target

[Service]
Type=simple
TimeoutStartSec=5m
#User=<your-user>
WorkingDirectory={{ sushy_venv }}
ExecStart={{ sushy_venv }}/bin/python3 {{ sushy_venv }}/bin/sushy-emulator --config {{ sushy_venv }}/sushy-emulator.conf
Restart=always

[Install]
WantedBy=multi-user.target

